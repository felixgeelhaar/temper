---
import '../styles/global.css'

interface Props {
  title: string;
  fullHeight?: boolean;
}

const { title, fullHeight = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Temper - Adaptive AI Pairing for Learning" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Temper</title>
  </head>
  <body class={fullHeight ? 'h-screen flex flex-col' : ''}>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
</style>
