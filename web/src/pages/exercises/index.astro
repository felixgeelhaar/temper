---
import Layout from '../../layouts/Layout.astro';
import ExerciseBrowser from '../../components/exercises/ExerciseBrowser.vue';
---

<Layout title="Exercises">
  <div class="min-h-screen bg-gray-50">
    <!-- Nav -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center gap-2">
              <span class="text-2xl">ðŸ”¥</span>
              <span class="text-xl font-bold text-gray-900">Temper</span>
            </a>
          </div>
          <div class="flex items-center gap-4">
            <a href="/workspaces" class="btn btn-ghost">My Workspaces</a>
            <a href="/logout" class="btn btn-outline">Log Out</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Exercise Library</h1>
        <p class="mt-2 text-gray-600">
          Choose an exercise pack and start practicing Go.
        </p>
      </div>

      <ExerciseBrowser client:load />
    </div>
  </div>
</Layout>
