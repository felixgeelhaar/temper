import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Nav -->
    <nav class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center gap-2">
              <span class="text-2xl">ðŸ”¥</span>
              <span class="text-xl font-bold text-gray-900">Temper</span>
            </a>
          </div>
          <div class="flex items-center gap-4">
            <a href="/exercises" class="btn btn-ghost">Exercises</a>
            <a href="/login" class="btn btn-outline">Log In</a>
            <a href="/register" class="btn btn-primary">Get Started</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight sm:text-6xl">
          Learn Go with
          <span class="text-blue-600">Adaptive AI Pairing</span>
        </h1>
        <p class="mt-6 text-xl text-gray-600 max-w-3xl mx-auto">
          Like tempering steel, Temper strengthens your skills through controlled,
          measured assistance. AI adapts to your level â€” leading when you're stuck,
          pairing during learning, stepping back as skill increases.
        </p>
        <div class="mt-10 flex justify-center gap-4">
          <a href="/register" class="btn btn-primary text-lg px-8 py-3">
            Start Learning
          </a>
          <a href="/exercises" class="btn btn-outline text-lg px-8 py-3">
            Browse Exercises
          </a>
        </div>
      </div>

      <!-- Features -->
      <div class="mt-24 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card p-6">
          <div class="text-3xl mb-4">ðŸŽ¯</div>
          <h3 class="text-lg font-semibold text-gray-900">Deliberate Practice</h3>
          <p class="mt-2 text-gray-600">
            Structured exercises designed to build real Go skills through focused,
            intentional practice sessions.
          </p>
        </div>

        <div class="card p-6">
          <div class="text-3xl mb-4">ðŸ¤–</div>
          <h3 class="text-lg font-semibold text-gray-900">Adaptive Hints</h3>
          <p class="mt-2 text-gray-600">
            AI provides just enough help â€” from clarifying questions to constrained
            snippets â€” respecting your learning zone.
          </p>
        </div>

        <div class="card p-6">
          <div class="text-3xl mb-4">ðŸ“ˆ</div>
          <h3 class="text-lg font-semibold text-gray-900">Skill Tracking</h3>
          <p class="mt-2 text-gray-600">
            Your learning profile evolves as you practice, enabling increasingly
            personalized guidance.
          </p>
        </div>
      </div>

      <!-- Intervention Levels -->
      <div class="mt-24">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
          The Learning Contract
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          <div class="card p-4 text-center">
            <div class="badge badge-l0 mb-2">L0</div>
            <h4 class="font-medium text-gray-900">Clarify</h4>
            <p class="text-xs text-gray-500 mt-1">Clarifying question only</p>
          </div>
          <div class="card p-4 text-center">
            <div class="badge badge-l1 mb-2">L1</div>
            <h4 class="font-medium text-gray-900">Category</h4>
            <p class="text-xs text-gray-500 mt-1">Hint at direction</p>
          </div>
          <div class="card p-4 text-center border-2 border-blue-500">
            <div class="badge badge-l2 mb-2">L2</div>
            <h4 class="font-medium text-gray-900">Location</h4>
            <p class="text-xs text-gray-500 mt-1">Point + concept</p>
          </div>
          <div class="card p-4 text-center border-2 border-blue-500">
            <div class="badge badge-l3 mb-2">L3</div>
            <h4 class="font-medium text-gray-900">Snippet</h4>
            <p class="text-xs text-gray-500 mt-1">Constrained outline</p>
          </div>
          <div class="card p-4 text-center opacity-60">
            <div class="badge badge-l4 mb-2">L4</div>
            <h4 class="font-medium text-gray-900">Partial</h4>
            <p class="text-xs text-gray-500 mt-1">Gated solution</p>
          </div>
          <div class="card p-4 text-center opacity-60">
            <div class="badge badge-l5 mb-2">L5</div>
            <h4 class="font-medium text-gray-900">Full</h4>
            <p class="text-xs text-gray-500 mt-1">Teach mode only</p>
          </div>
        </div>
        <p class="text-center text-gray-500 mt-4 text-sm">
          Default practice mode: L2-L3. You remain the author.
        </p>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-2">
            <span class="text-xl">ðŸ”¥</span>
            <span class="font-medium text-gray-900">Temper</span>
          </div>
          <p class="text-sm text-gray-500">
            Understanding beats speed.
          </p>
        </div>
      </div>
    </footer>
  </div>
</Layout>
